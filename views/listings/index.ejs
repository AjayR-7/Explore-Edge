<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/style.css" />

<div id="filters">
  <div class="border-class">
  <div class="filter">
    <div><i class="fa-solid fa-fire-flame-curved"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bell-concierge"></i></div>
    <p>Restorents</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tree-city"></i></div>
    <p>Iconic City</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome-alt"></i></div>
    <p>Castle</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-skiing"></i></div>
    <p>Arcitic</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tents"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-tractor"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-hiking"></i></div>
    <p>Hiking</p>
  </div>
</div>

  <div class="tax-toggle bg-dark">
    <div class="form-check-reverse form-switch ">
      <input
        class="form-check-input "
        type="checkbox"
        role="switch"
        id="flexSwitchCheckDefault"
        style="background-color: rgb(246, 136, 2);"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Including TAX</label
      >
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> <br /> </b>
          &#8377; <%= listing.price.toLocaleString("en-IN") %>/ night
          <i class="tax-info"> &nbsp;&nbsp; +18 %GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script src="/js/script.js"></script>
